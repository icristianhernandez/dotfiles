## My custom bash confing

# change editor to nvim
export EDITOR=nvim
export VISUAL=nvim

# aliases
alias ...="cd ../../"
alias ..="cd ../"
alias updatef="sudo apt update; sudo apt upgrade"
alias nvimcd="cd ~/.config/nvim"
alias cdnvim="cd ~/.config/nvim"
alias neovide="neovide.exe --wsl"
alias gs="git status"
alias gall="git add .; git commit"
alias gsafepush="git pull; git push"
alias ls="exa --icons -F -H --group-directories-first --sort=type"
alias ll="ls -alF"
alias la="ls -a"
alias lt="ls -T"

# execute commands
eval "$(starship init bash)"

